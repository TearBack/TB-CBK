<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#3810d935"
    android:layout_height="120dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/info_item_iv"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/info_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/info_item_iv"
        android:singleLine="true"
        android:text="我是标题"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/info_item_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_item_tv_title"
        android:layout_toRightOf="@id/info_item_iv"
        android:maxLines="3"
        android:text="我是简介,多多多读痘痘多多读懂多多多的道德打发是否大师傅大放大师傅大师傅大事发当时发生的发达书法的书法大赛分打撒大师傅打算发的" />

    <TextView
        android:id="@+id/info_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_item_tv_desc"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_toRightOf="@id/info_item_iv"
        android:text="5月1日 23:21" />

    <TextView
        android:id="@+id/info_item_tv_source"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/info_item_tv_desc"
        android:layout_marginTop="5dp"
        android:text="新浪网那个" />

</RelativeLayout>