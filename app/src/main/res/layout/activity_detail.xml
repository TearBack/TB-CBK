<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.test.zjj.tb_cbk.ui.activity.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="#4076adad"
        app:titleTextColor="#ffffff" />

    <TextView
        android:id="@+id/detail_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_toolbar"
        android:text="我是标题啦啦啦"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/detail_tv_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_tv_title"
        android:text="频道" />

    <TextView
        android:id="@+id/detail_tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detail_tv_title"
        android:text="来源" />

    <TextView
        android:id="@+id/detail_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_tv_title"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/detail_tv_source"
        android:text="1206年5月1日 22:23" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_tv_source">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_tv_source"
                android:layout_marginTop="10dp"
                android:text="我是简介啦阿拉蕾" />

            <TextView
                android:id="@+id/detail_tv_html"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_tv_desc"
                android:layout_marginTop="10dp"
                android:text="详细的HTML格式内容" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
